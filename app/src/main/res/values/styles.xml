<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar colors and Navigation bar colors -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <!--Ripple effect color-->
        <item name="colorControlHighlight">@color/colorTheme</item>


    </style>
    <!--Custom Styling-->
    <style name="CardViewStyles" parent="CardView.Dark">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="backgroundColor">@color/colorTheme</item>
        <item name="backgroundTint">@color/colorTheme</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
